{
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 2,
	"printWidth": 80,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"overrides": [
		{
			"files": ["tsconfig.json", "jsconfig.json"],
			"options": {
				"parser": "jsonc"
			}
		},
		{
			"files": ["*.md"],
			"options": {
				"printWidth": 100,
				"proseWrap": "always"
			}
		}
	]
}
